#!/bin/bash

# Update package list and install nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Create a custom index.html file
echo "Hello World!" | sudo tee /var/www/html/index.html

# Ensure nginx is listening on port 80 (default configuration)

# Remove duplicate location block if exists
sudo sed -i '/location \/hbnb_static {/,/}/d' /etc/nginx/sites-enabled/default

# Test nginx configuration
sudo nginx -t

# Start nginx service without using systemctl
sudo service nginx start

