#!/usr/bin/env bash

# This script configures Nginx to have a custom 404 page
# containing the string "Ceci n'est pas une page"

# Install Nginx if not already installed
sudo apt-get update
sudo apt-get install -y nginx

# Create a custom 404 error page
sudo sh -c 'echo "<!DOCTYPE html>" > /var/www/html/404.html'
sudo sh -c 'echo "<html>" >> /var/www/html/404.html'
sudo sh -c 'echo "<head><title>404 Not Found</title></head>" >> /var/www/html/404.html'
sudo sh -c 'echo "<body>" >> /var/www/html/404.html'
sudo sh -c 'echo "<h1>404 Not Found</h1>" >> /var/www/html/404.html'
sudo sh -c 'echo "<p>Ceci n\'est pas une page</p>" >> /var/www/html/404.html'
sudo sh -c 'echo "</body></html>" >> /var/www/html/404.html'

# Configure Nginx to use the custom 404 error page
sudo unlink /etc/nginx/sites-enabled/default
sudo tee /etc/nginx/sites-available/default > /dev/null <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    error_page 404 /404.html;
    location = /404.html {
        internal;
    }

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

sudo ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Verify Nginx configuration and restart
sudo nginx -t
sudo systemctl reload nginx

